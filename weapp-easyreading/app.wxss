/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  /*padding: 200rpx 0;*/
  box-sizing: border-box;
  background: #F0F4F3;
}

.container.withtab{
  margin: 105rpx 0 0 0;
  /*top: 105rpx;*/
}
.flex-wrp{
  display: flex;
}
.flex-tab{
  flex-flow: row nowrap;
  justify-content: space-around;
  align-items: stretch;
}
.flex-item{
  flex-grow: 1;
  text-align: center;
}
.top-tab{
  width: 750rpx;
  height: 100rpx;
  background: #298DE5;
  color: #8CCEFD;
  font-size: 28rpx;
  line-height: 100rpx;
  box-shadow: 0 2px 2px #bebebe;
  margin: 0 0 8rpx 0;
  position: fixed;
  top: 0;
  z-index: 9999;
}
.toptab.active{
  color: #ffffff;
  border-bottom: solid 2px #ffffff;
}
.container{
  padding: 0;
  font-size: 14rpx;
  color: #000;
}
.container .feed-item{
   position: relative;
    margin: 0 auto;
    margin-top: 12px;
    width: 630rpx;
    height: 240rpx;
    padding: 30rpx;
    background: #FFFFFF;
    border: solid 1px #ebebeb;
    border-radius: 3px;
    box-shadow: 4px 4px 10px #bebebe;
}
.container .feed-item .feed-source{
  width: 630rpx;
  left: 0;
  height: 50rpx;
}
.container .feed-item .feed-source .avatar{
  position: relative;
  display: inline-block;
}
.container .feed-item .feed-source a{
  display: inline-block;
  height: 40rpx;
}
.container .feed-item .feed-source .avatar image{
  /*position: absolute;*/
  display: inline-block;
  width: 45rpx;
  height: 45rpx;
  border-radius: 45rpx;
  top: 10rpx;
  vertical-align: middle;
}
.container .feed-item .feed-source text{
  /*position: absolute;*/
  display: inline-block;
  height: 40rpx;
  line-height: 40rpx;
  vertical-align: middle;
  margin: 0 0 0 15rpx;
  color: #a0acac;
  font-size: 26rpx;
}
.container .feed-item .feed-source .item-more{
  display: inline-block;
  width: 40rpx;
  height: 45rpx;
  float: right;
}
.container .feed-item .feed-content{
  padding: 10rpx 0 0 0;
}
.container .feed-item .feed-content .question text{
  font-size: 28rpx;
  font-weight: 600px;
  line-height: 40rpx;
  text-space: 5rpx;
}
.container .feed-item .feed-content .answer-body{
  padding: 10rpx 0 0 0;
  /*height: 10rpx;*/
  font-size: 24rpx;
  line-height: 28rpx;
  color: #5b5b5b;
  flex-wrap: nowrap;
}
/*mine*/
.container .feed-item .feed-content .answer-body a{
   display: inline-block;
   width: 240px;
}

.container .feed-item .feed-content .answer-body .avatar{
   width: 120rpx;
    height: 120rpx;
}


.container .feed-item .feed-content .art-more .art-tag .tag{
   height: 28rpx;
    padding: 8rpx 20rpx;
    border-radius: 20rpx;
    margin: 8rpx 5rpx;
    background: #EEF5F8;
    color:#38c938;
    font-size: 20rpx;
    vertical-align: middle;
}

.container .feed-item .feed-content .art-more{
    margin-top:10px;
    height: 60rpx;
}

.container .feed-item .feed-content .art-more view{
    display: inline-block;
    margin: 0 10rpx 0 0;
}

.container .feed-item .feed-content .art-more image{
    width:25rpx;
    height: 25rpx;
    margin: 0 10rpx 0 0;
    vertical-align: middle;
}
.container .feed-item .feed-content .art-more .left{
    float: left;
    padding: 10rpx 0;
}
.container .feed-item .feed-content .art-more .right text{
    color: #AFAFAF;
    height: 50rpx;
    vertical-align: middle;
    padding: 18rpx 0;
    font-size: 24rpx;
}

.container .feed-item .feed-content .art-more .right{
  float:right;
}

.container .feed-item .feed-content .answer-body .avatar image{
   display: inline-block;
    width: 120rpx;
    height: 120rpx;
    border-radius: 20rpx;
    float: right;
}

.container .feed-item .feed-content .answer-actions{
  width: 630rpx;
  padding: 10rpx 0  0;
  color: #a0acac;
}
.container .feed-item .feed-content .answer-actions view{
  display: inline-block;
  vertical-align: text-bottom;
  padding: 0 10rpx 0 0;
  font-size: 24rpx;
}
